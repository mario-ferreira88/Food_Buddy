<div class="d-flex justify-content-start ms-3 fa-xl">
  <%= link_to my_profile_profiles_path do %>
    <i class="fa-solid fa-arrow-left mt-3" style="color: #9AA6B5;"></i>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <div class="col-10 my-5 mt-5">
    <h1 class="text-center mb-4">My Groups Chats</h1>

    <% @chatrooms.each do |chatroom| %>
      <div class="card-event d-flex justify-content-between align-items-center ps-4 index-chat-card">
        <h5><%= chatroom.name %> Chat</h5>
        <%= link_to chatroom_path(chatroom), class: 'icon-link' do %>
          <i class="fa-solid fa-circle-chevron-right fa-lg" style="color: #1E2248;"></i>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
