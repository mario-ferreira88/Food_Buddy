
 <div class="d-flex justify-content-start ms-3 fa-xl">
      <%= link_to my_profile_profiles_path do %>
        <i class="fa-solid fa-arrow-left mt-3" style="color: #9AA6B5;"></i>
      <% end %>
  </div>
<div class="d-flex justify-content-center ">
  <div class="col-10 my-5 mt-5">
    <h1 class="text-center mb-4">My Groups</h1>
      <% @groups.each do |group| %>
        <div class="card-event">
          <div class="card-content">
          <% if group.photo.attached? %>
            <%= cl_image_tag group.photo.key %>
            <% else %>
             <%= image_tag 'default.jpeg' %>
            <% end %>
              <div class="card-event-infos">
                <h2><%= group.name %></h2>
              </div>
          </div>
          <%= link_to group_path(group.id), class: 'icon-link' do %>
            <i class="fa-solid fa-circle-chevron-right fa-lg" style="color: #1E2248;"></i>
          <% end %>
        </div>
      <% end %>
     <%= link_to "New Group", new_group_path %>
  </div>

</div>
