<button><%= link_to "X", root_path %></button>

<div class="d-flex flex-column align-items-flex-start justify-content-center vh-100">
  <h1><%= @profile.full_name %></h1>
  <h2><%= @profile.phone_number %></h2>
  <h2><%= @profile.address %></h2>
  <div>
    <% if @profile.photo.present? %>
      <%= cl_image_tag @profile.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <%= image_tag "profile_pic_1.jpeg", height: 300, width: 400, crop: :fill %>
    <% end %>
  <div>
    <%= link_to "My groups", root_path %> <%= link_to "My buddies", root_path %>
  </div>
  <%= link_to "My nutrition preferences", root_path %>
  <%= link_to "My favorite restaurants", root_path %>
  <div class="d-flex justify-content-center m-1">
    <h1>My upcoming events</h1>
  </div>
</div>
