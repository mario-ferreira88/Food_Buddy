<div class="container">
  <h2 class="form-title mb-3 mt-3">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs form-font">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions btn reset-password-btn">
      <%= f.button :submit, "Send password instructions" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
