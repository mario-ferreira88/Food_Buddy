<div class="text-center">
  <div class="background"  style="height: 100vh">
    <div class="d-flex justify-content-start fa-xl ms-3">
      <%= link_to root_path do %>
        <i class="fa-solid fa-arrow-left mt-3" style="color: #9AA6B5;"></i>
      <% end %>
    </div>
      <h3 class="mt-5 mb-5 logo">FoodBuddy</h3>
      <%= image_tag "broccoli.gif", alt: "Broccoli", width: "35%", class:"mt-5" %>
      <div class="main-container mt-4">
        <div class=" d-flex flex-column mt-3 align-items-center">
          <div>
            <h3>Welcome</h3>
            <h3><%= current_user.profile.full_name if current_user.profile %>!!!</h3>
          </div>
          <div>
            <%= link_to "Create an event!", events_path, class: "btn btn-purple mt-4 mb-3", data: {turbo_method: :post} %>
          </div>
          <div>
            <% if current_user.profile.nil? %>
              <%= link_to "Create a Profile", new_profile_path, class: "btn btn-light-purple" %>
            <% else %>
              <%= link_to "Profile", my_profile_profiles_path, class: "btn btn-light-purple" %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
