<div>
  <div class="d-flex justify-content-start ms-3 fa-xl">
    <%= link_to :back do %>
      <i class="fa-solid fa-arrow-left mt-3" style="color: #9AA6B5;"></i>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <div class="col-10 mt-4">
      <h5 class="card-title mb-4 events-titles">Upcoming solo events</h5>
        <% @SoloEvents.each do |event| %>
          <div class="card-event">
            <% if event.progress == 100 %>
            <%= image_tag 'dinner.png' %>
            <div class="card-content align-items-start pt-2 ps-2 flex-column flex-grow-1">
              <h2><%= event.name %></h2>
                <p>
                  <i class="fa-solid fa-calendar" style="color: #1E2248;"></i>
                  <%= event.date.strftime('%a %dth %B') %>
                </p>
                <p>
                  <i class="fa-solid fa-clock" style="color: #1E2248;"></i>
                  <%= event.date.strftime('%H:%M') %>
                </p>
                <p>
                  <i class="fa-solid fa-location-pin" style="color: #1E2248;"></i>
                  <strong><%= event.restaurant.name %></strong>
                </p>
            </div>
            <%= link_to event_path(event), class: 'icon-link' do %>
              <i class="fa-solid fa-circle-chevron-right fa-lg" style="color: #1E2248;"></i>
            <% end %>
            <% else %>
            <div class="border border-info d-flex align-items-center" >
              <%= image_tag 'dinner.png' %>
              <%= link_to edit_event_path(event), class: "icon-link" do %>
                <h6 class="me-5 card-event-continue">Continue creating your event</h6>
                <i class="fa-solid fa-triangle-exclamation" style="color: #fcde1d;"></i>
                <i class="fa-solid fa-circle-chevron-right fa-lg" style="color: #1E2248"></i>
              <% end %>
            </div>
           <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>
<div class="events-divider">
</div>
